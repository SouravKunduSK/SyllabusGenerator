@model SyllabusGenerator.Models.TeachingStrategie


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item ">Dashboard</li>
        <li class="breadcrumb-item active">Edit Teaching Strategie</li>


    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Edit Category

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "TeachingStrategie", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(model => model.TeachingStrategieId)

                <div class="form-group">
                    @Html.LabelFor(model => model.Strategies, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Strategies, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Strategies, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div>
                    <a onclick="window.history.back();" class="btn btn-danger">Cancel</a>
                    <input type="submit" class="btn btn-primary" value="Update" />
                </div>
            }
        </div>
    </div>
</div>
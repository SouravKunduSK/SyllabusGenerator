@using SyllabusGenerator.Models;
@model Tuple<LPCLO, List<LPCLO>>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Index</h2>

<div class="card-body">
    @using (Html.BeginForm("Create", "LPCLO", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3 style="color:red;">@TempData["msg"]</h3>
      
        @*@Html.HiddenFor(model => model.BookTypeId, new { htmlAttributes = new { @class = "form-control" } })*@













    

        <div class="col-md-6">
            <div class="form-group">
                @if (ViewBag.CloList != null)
                {
                    <div class="col-md-10">
                        <h6>Select CLO</h6>
                        @Html.DropDownList("CLOId", ViewBag.CloList as SelectList, "-- Select CLO ---", new { @class = "form-control", @name = "cloId" })
                    </div>
                }
            </div>
        </div>








        <div class="col-md-6">
            <div class="col-md-10">
                <a onclick="window.history.back();" class="btn btn-danger">Cancel</a>
                <input type="submit" class="btn btn-success" value="Save" />

            </div>
        </div>
    }
</div>

<br />
<br />
<a href="@Url.Action("Index", "LPA", new { id =(int) Session["planId"]})" class="btn btn-success">Next</a>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-book-open"></i>
        All Course Details
        <a href="@( Url.Action("Create", "LPCLO") )" class="btn btn-info pull-right fa fa-plus">Add New Course</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-condensed table-hover table-bordered table-striped table" id="dataTable" width="100%" cellspacing="0">
                <thead>


                    <tr>

                        <th>Serial No.</th>
                        

                        <th>CLO</th>
                        



                    </tr>


                </thead>

                <tbody>
                    @foreach (var item in Model.Item2)
                    {


                        <tr>
                            <td>@(Model.Item2.IndexOf(item)+1)</td>
                            

                            
                            <td>@item.CLO.Outcomes</td>
                            

                            @*<td><a href="@Url.Content(item.ImageURL)" target="_blank"><img src="@Url.Content(item.ImageURL)" style="width:100px; height:67px;" /></a></td>*@
                            @*<td>
                                <a href="@Url.Action("Edit", "Resource", new { id = item.CourseId})" class="btn btn-info">Edit</a>
                                <a href="@Url.Action("Delete", "Resource", new { id = item.CourseId})" class="btn btn-danger">Delete</a>
                            </td>*@



                        </tr>




                    }

                </tbody>
            </table>
        </div>

    </div>
</div>